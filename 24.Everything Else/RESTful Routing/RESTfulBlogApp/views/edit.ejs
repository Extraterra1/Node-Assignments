<%- include('partials/header') %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit Blog</div>
    <!-- //The PUT Method works thanks to the method-override package -->
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label for="title">Title</label>
            <input type="text" name="title" placeholder="Title" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label for="img">Image</label>
            <input type="text" name="img" placeholder="Image URL" value="<%= blog.img %>">
        </div>
        <div class="field">
            <label for="body">Text</label>
            <textarea required name="body"><%= blog.body %></textarea>
        </div>
        <input class="ui blue basic button big" type="submit" value="Edit">
        
        
    </form>
    <!-- DELETE BUTTON -->
    <form style="display: inline;" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
        <button class="ui red basic button big">DELETE</button>
    </form>
</div>
<%- include('partials/footer') %> 